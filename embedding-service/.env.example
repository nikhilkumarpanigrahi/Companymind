# Embedding Service – Environment Variables
# Copy this file to .env and adjust values as needed.

# ── App ──────────────────────────────────────────────────────
APP_NAME=Embedding Service
APP_VERSION=1.0.0
DEBUG=false

# ── Server ───────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ── Model ────────────────────────────────────────────────────
MODEL_NAME=all-MiniLM-L6-v2
DEVICE=cpu
MAX_SEQ_LENGTH=256

# ── Batch ────────────────────────────────────────────────────
MAX_BATCH_SIZE=512
NORMALIZE_EMBEDDINGS=true

# ── CORS (comma‑separated origins, or * for all) ────────────
CORS_ORIGINS=["*"]

# ── Logging ──────────────────────────────────────────────────
LOG_LEVEL=INFO
